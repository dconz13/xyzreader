<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="250"
    android:transitionOrdering="together">

    <fade>
        <targets>
            <target android:targetId="@id/photo_container"/>
            <target android:targetId="@id/share_fab"/>
            <target android:excludeId="@id/pager"/>
        </targets>
    </fade>

    <slide android:slideEdge="top">
        <targets>
            <target android:targetId="@id/up_container"/>
        </targets>
    </slide>

    <slide android:slideEdge="bottom">
        <targets>
            <target android:id="@id/meta_bar" />
            <target android:id="@id/article_body"/>
            <target android:id="@id/article_title"/>
        </targets>
    </slide>

</transitionSet>